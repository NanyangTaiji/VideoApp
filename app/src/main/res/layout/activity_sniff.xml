<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SniffActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <AutoCompleteTextView

            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/menu"
            android:background="@drawable/card_shadow"
            android:hint="@string/baidu"
            android:imeOptions="actionSearch"
            android:paddingStart="15dp"
            android:singleLine="true"
            tools:ignore="MissingConstraints,RtlSymmetry" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/menu" />
        <TextView
            android:id="@+id/ads"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/address"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="0"
            android:backgroundTint="@color/color_4k"
            android:background="@drawable/quality_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout

        android:id="@+id/web_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/alert"
        android:layout_below="@+id/tool"
        tools:ignore="InvalidId" />

    <LinearLayout
        android:id="@+id/navigation"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/houtui"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/forth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/qianjin"
            android:contentDescription="@string/todo" />
        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/refresh" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/home" />
        <ImageButton
            android:id="@+id/exit"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/exit" />

    </LinearLayout>
    <TextView
        android:id="@+id/alert"
        android:padding="5dp"
        android:text="@string/forbid_video"
        android:layout_above="@+id/navigation"
        android:background="@color/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/sniff"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/navigation"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="65dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/video" />
</RelativeLayout>